{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "app",
                "onlyDependOnLibsWithTags": ["type:feature"]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": ["type:model", "type:ui", "type:data"]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": ["type:model"]
              },
              {
                "sourceTag": "type:data",
                "onlyDependOnLibsWithTags": ["type:model"]
              },
              {
                "sourceTag": "domain:companies",
                "onlyDependOnLibsWithTags": ["domain:companies"]
              },
              {
                "sourceTag": "domain:departments",
                "onlyDependOnLibsWithTags": ["domain:departments"]
              },
              {
                "sourceTag": "domain:employees",
                "onlyDependOnLibsWithTags": ["domain:employees"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
